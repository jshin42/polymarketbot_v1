{
  "name": "polymarketbot-v1",
  "version": "1.0.0",
  "private": true,
  "description": "Polymarket Last-Minute Anomaly Detection Bot",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:collector": "pnpm --filter @polymarketbot/collector dev",
    "dev:normalizer": "pnpm --filter @polymarketbot/normalizer dev",
    "dev:wallet-enricher": "pnpm --filter @polymarketbot/wallet-enricher dev",
    "dev:feature-engine": "pnpm --filter @polymarketbot/feature-engine dev",
    "dev:scorer": "pnpm --filter @polymarketbot/scorer dev",
    "dev:strategy": "pnpm --filter @polymarketbot/strategy dev",
    "dev:paper-engine": "pnpm --filter @polymarketbot/paper-engine dev",
    "dev:executor": "pnpm --filter @polymarketbot/executor dev",
    "dev:risk": "pnpm --filter @polymarketbot/risk dev",
    "dev:audit": "pnpm --filter @polymarketbot/audit dev",
    "dev:dashboard": "pnpm --filter @polymarketbot/dashboard dev",
    "test": "pnpm -r test",
    "test:integration": "pnpm -r test:integration",
    "test:e2e": "pnpm -r test:e2e",
    "lint": "eslint packages --ext .ts",
    "lint:fix": "eslint packages --ext .ts --fix",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "migrate": "node-pg-migrate up -m migrations",
    "migrate:down": "node-pg-migrate down -m migrations",
    "migrate:create": "node-pg-migrate create -m migrations",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "node -e \"try { require('husky') } catch (e) { if (e.code !== 'MODULE_NOT_FOUND') throw e }\" && husky || true"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "node-pg-migrate": "^7.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "ioredis": "5.4.1"
    }
  }
}
